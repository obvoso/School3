package Ex02;

class boolean isLeapYear(int year) {
	boolean result = false;
	if (year % 4 == 0) {
		result = true;
		if (year % 100 == 0) {
			result = false;
			if (year % 1000 == 0) {
				result = true;
			}
		}
	}
	return result;
}

public class LeapYear {
	public static void main(String[] args) {
		System.out.printf("2020년은 윤년입니까? %b\n", isLeapYear(2020));
	}

}
